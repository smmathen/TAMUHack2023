      "Properties": {
        "DestinationArn": "arn:aws:logs:us-east-1:802587217904:destination:5b878d2d-4e74-4dfd-97c3-a6399a7283c5#Q5g36r2zwN15PTsbrG#tasks#dev",
        "FilterPattern": "?\"REPORT RequestId: \" ?\"SERVERLESS_ENTERPRISE\"",
